<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="#2D2A49"/>
    </Style>

    <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="#1A162D"/>
        <Setter Property="TextColor" Value="#E5E2F4"/>
        <Setter Property="PlaceholderColor" Value="#4F4C63"/>
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <Style TargetType="Editor">
        <Setter Property="BackgroundColor" Value="#1A162D"/>
        <Setter Property="TextColor" Value="#E5E2F4"/>
        <Setter Property="PlaceholderColor" Value="#4F4C63"/>
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <Style TargetType="Picker">
        <Setter Property="BackgroundColor" Value="#1A162D"/>
        <Setter Property="TextColor" Value="#E5E2F4"/>
        <Setter Property="TitleColor" Value="#4F4C63"/>
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="#E5E2F4"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="#D22453"/>
        <Setter Property="TextColor" Value="#26223D"/>
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="14,10"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <Style TargetType="Frame">
        <Setter Property="BorderColor" Value="#4F4C63"/>
        <Setter Property="BackgroundColor" Value="#2D2A49"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="HasShadow" Value="False"/>
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="Color" Value="#D22453"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <Style TargetType="DatePicker">
        <Setter Property="BackgroundColor" Value="#1A162D"/>
        <Setter Property="TextColor" Value="#E5E2F4"/>
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <Style TargetType="TabbedPage">
        <Setter Property="BarBackgroundColor" Value="#2D2A49"/>
        <Setter Property="BarTextColor" Value="#E5E2F4"/>
        <Setter Property="UnselectedTabColor" Value="#4F4C63"/>
        <Setter Property="SelectedTabColor" Value="#D22453"/>
    </Style>

</ResourceDictionary>