<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IFF.Views.TermsPage"
             Title="Умовна згода">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Текст умовної згоди тут. Прочитайте уважно." FontSize="Medium"/>
            <Button Text="Я прочитав та погоджуюсь" Command="{Binding AcceptTermsCommand}" HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>